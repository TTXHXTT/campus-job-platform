
.container {
  min-height: 100vh;
  background: #fff;
  padding: 30rpx;
}
.notice-header {
  margin-bottom: 30rpx;
}
.notice-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 20rpx;
  line-height: 1.4;
}
.notice-time {
  font-size: 24rpx;
  color: #999;
}
.notice-image {
  width: 100%;
  border-radius: 12rpx;
  margin-bottom: 30rpx;
}
.notice-content {
  font-size: 28rpx;
  color: #333;
  line-height: 1.8;
}
